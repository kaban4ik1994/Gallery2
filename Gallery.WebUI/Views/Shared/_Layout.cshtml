@using Gallery.Util.Conrete
@using Gallery.WebUI.Helpers
@using Gallery.WebUI.Models.Account
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery</title>
    @RenderSection("links", false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!--header-->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Gallery</a>
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial", new LoginViewModel())
            </div>
        </div>
    </div>
    <!--/header-->
    <!--content-->
    <div class="container">
        <div class="row row-offcanvas row-offcanvas-right">
            <div class="col-xs-12 col-sm-9">
                <p class="pull-right visible-xs">
                    <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Menu</button>
                </p>
                @RenderBody()
            </div><!--/span-->
            @Html.Partial("_Menu", MenuHelper.GetMenuItems(new DepartamentUtil(ConfigHeper.DepartamentApiUrl)))
        </div><!--/row-->
        <!--/content-->
        <hr>

        

    </div><!--/.container-->
    <footer>
        <p>&copy; Курсовой проект 2014</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)
</body>
</html>