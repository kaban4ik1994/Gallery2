@model Gallery.WebUI.Models.Home.CarouselItemViewModel

@{
    if (Model.IsActive)
    {
        <div class="item active">
            <img src="@Model.ImageUrl" alt="..." style="width: 100%">
        </div>
    }
    else
    {
        <div class="item">
            <img src="@Model.ImageUrl" alt="...">
        </div>
    }
}